@model StageCraft.Models.Production

@{
    ViewData["Title"] = "Delete Production";
}

<div class="card border-danger mt-5 mx-auto p-4 bg-black text-white" style="max-width: 700px;">
    <h2 class="text-center text-danger border-bottom pb-3">
        Are you sure you want to delete this production?
    </h2>

    <div class="mb-4">
        <h4 class="fw-bold">@Model.Title</h4>
        <p>@Model.Description</p>
        <p><strong>Opening Day:</strong> @Model.OpeningDay.ToShortDateString()</p>
        <p><strong>Closing Day:</strong> @Model.ClosingDay.ToShortDateString()</p>

        @if (!string.IsNullOrEmpty(Model.PosterImagePath))
        {
            <div class="text-center mt-3">
                <img src="@Model.PosterImagePath" alt="Poster for @Model.Title"
                     class="img-fluid rounded shadow" style="max-height: 300px;" />
            </div>
        }
    </div>

    <form asp-action="Delete" method="post" class="d-flex justify-content-between align-items-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
    </form>
</div>
