@model IEnumerable<StageCraft.Models.ApplicationUser>

<div class="container mt-5">
    <h3 class="text-danger text-center mb-4">üë• All Users</h3>

    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Username</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td class="text-center">
                            <form asp-action="DeleteUser" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Are you sure you want to delete this user?');">
                                    üóë Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="AdminPanel" class="btn btn-secondary">
            ‚¨ÖÔ∏è Back to Admin Panel
        </a>
    </div>
</div>
