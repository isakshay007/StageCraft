@{
    ViewData["Title"] = "Success";
}

<div class="container my-5">
    <div class="card bg-dark text-white border border-success rounded-4 shadow-lg mx-auto p-4" style="max-width: 700px;">
        <h3 class="text-center text-success mb-3 fw-bold">
            ✅ Production Manager Created Successfully!
        </h3>

        <div class="alert alert-success text-dark fw-medium rounded-3 text-center" role="alert">
            The new Production Manager account has been created.
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-action="CreateProductionManager" asp-controller="Admin" class="btn btn-outline-success">
                ➕ Create Another
            </a>
            <a asp-action="AdminPanel" asp-controller="Admin" class="btn btn-outline-light">
                ⬅️ Back to Admin Panel
            </a>
        </div>
    </div>
</div>
