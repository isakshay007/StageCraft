@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <!-- Show TempData messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
            <div class="card bg-dark text-white shadow-lg p-4" style="border-radius: 20px;">
                <div class="card-header bg-dark text-center mb-3 border-0">
                    <h4 class="text-danger mb-0">Manage Section ⚙️</h4>
                </div>
                <div class="card-body d-grid gap-3">
                    <a asp-action="CreateProductionManager" class="btn btn-danger btn-lg rounded-pill">➕ Create Production Manager</a>
                    <a asp-action="UsersList" class="btn btn-danger btn-lg rounded-pill">👥 All Users</a>
                    <a asp-action="ProductionManagersList" class="btn btn-danger btn-lg rounded-pill">🎭 All Production Managers</a>
                    <a asp-action="RecentActivityLogs" class="btn btn-danger btn-lg rounded-pill">🕒 Recent Activity Logs</a>
                    <a asp-action="LoginStatistics" class="btn btn-danger btn-lg rounded-pill">📊 Login Statistics</a>
                    <a asp-controller="Productions" asp-action="Index" class="btn btn-danger btn-lg rounded-pill">🎬 Manage Productions</a>
                </div>
            </div>
        </div>
    </div>
</div>
